{
  "name": "nextjs-accelerate",
  "description": "Next Accelerate boilerplate code with TypeScript, NextJS, and Tailwind",
  "version": "0.1.0",
  "author": "Tushar Shukla",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tusharshuklaa/nextjs-accelerate.git"
  },
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint:all": "npm run lint:js && npm run lint:css",
    "lint:all-fix": "npm run lint:js-fix && npm run lint:css-fix",
    "lint:css": "stylelint ./src/styles/**/*.css",
    "lint:css-fix": "stylelint ./src/styles/**/*.css --fix",
    "lint:js": "eslint ./src/**/*.{ts,tsx}",
    "lint:js-fix": "eslint ./src/**/*.{ts,tsx} --fix",
    "prepare": "husky install",
    "start": "next start"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "next": "12.2.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.4.0"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/node": "18.0.6",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "autoprefixer": "^10.4.8",
    "eslint": "^8.22.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-next": "12.2.3",
    "eslint-config-prettier": "^8.5.0",
    "eslint-formatter-pretty": "^4.1.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.8.2",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "husky": "^8.0.0",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "stylelint": "^14.10.0",
    "stylelint-color-format": "^1.1.0",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^27.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.5.0",
    "stylelint-order": "^5.0.0",
    "tailwindcss": "^3.1.7",
    "typescript": "4.7.4"
  },
  "lint-staged": {
    "*.css": [
      "stylelint --cache --fix"
    ],
    "*.{ts,tsx}": [
      "npm run lint:js-fix --"
    ],
    "*.{css,ts,tsx,json,md}": "prettier --write"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "importSort": {
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "eslint",
      "options": {}
    }
  }
}
